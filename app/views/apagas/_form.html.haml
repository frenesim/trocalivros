= form_for @apaga do |f|
  - if @apaga.errors.any?
    #error_explanation
      %h2= "#{pluralize(@apaga.errors.count, "error")} prohibited this apaga from being saved:"
      %ul
        - @apaga.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
