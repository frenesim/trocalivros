- model_class = Editora
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @editora.nome

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), editoras_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_editora_path(@editora), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), editora_path(@editora), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
