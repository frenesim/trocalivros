!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Troca"
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
  %body
    #user-log
      -if user_signed_in?
        Bem vindo #{link_to current_user.email, edit_user_registration_path}. Clique para
        =link_to "Sair", destroy_user_session_path, :method => :delete
      -else
        #{link_to "Entre", new_user_session_path} ou #{link_to "Registe-se", new_user_registration_path}
    .row-fluid
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.brand(href="#") Troca de Livros
          .container-nav
            =render_navigation :expand_all => true, :renderer => :bootstrap
    =render :partial => "layouts/flashes"
    .container-fluid
      =yield
  %footer
  %p &copy; Xaricofugas 2013


= javascript_include_tag "application"
