= form_for @livro, :html => { :class => 'form-horizontal', :multipart => true} do |f|
  .control-group
    = f.label :nome, :class => 'control-label'
    .controls
      = f.text_field :nome, :class => 'text_field'
  .control-group
    = f.label :disciplina_id, :class => 'control-label'
    .controls
      = collection_select :livro, :disciplina_id, Disciplina.all, "id", "nome", {:include_blank => true}
  .control-group
    = f.label :editora_id, :class => 'control-label'
    .controls
      = collection_select :livro, :editora_id, Editora.all, "id", "nome", {:include_blank => true}
  .control-group
    = f.label "Escolaridade", :class => 'control-label'
    .controls
      = f.select :ano_escolaridade, options_for_select((5..12).map{|a| a.to_s+"º"}), {:include_blank => true},:class=>"span1"
      Ano
  .control-group
    = f.label "Autor", :class => 'control-label'
    .controls
      = collection_select :livro, :autore_id, Autore.all, "id", "nome", {:include_blank => true}
  .control-group
    = f.label "Preço", :class => 'control-label'
    .controls
      = f.number_field :preco, :class => 'number_field', :class=>"span1"
      (€)
  .control-group
    = f.label :photos, :class => 'control-label'
    .controls
      = f.file_field :photo1, :class => 'photo_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), livros_path, :class => 'btn'
