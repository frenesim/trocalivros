= form_for @livro, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :nome, :class => 'control-label'
    .controls
      = f.text_field :nome, :class => 'text_field'
  .control-group
    = f.label :disciplina_id, :class => 'control-label'
    .controls
      = f.number_field :disciplina_id, :class => 'text_field'
  .control-group
    = f.label :editora_id, :class => 'control-label'
    .controls
      = f.number_field :editora_id, :class => 'number_field'
  .control-group
    = f.label :ano_escolaridade, :class => 'control-label'
    .controls
      = f.number_field :ano_escolaridade, :class => 'number_field'
  .control-group
    = f.label :autore_id, :class => 'control-label'
    .controls
      = f.number_field :autore_id, :class => 'number_field'
  .control-group
    = f.label :preco, :class => 'control-label'
    .controls
      = f.number_field :preco, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), livros_path, :class => 'btn'
