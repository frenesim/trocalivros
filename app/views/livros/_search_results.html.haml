%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:photo1)
      %th= model_class.human_attribute_name(:disciplina_id)
      %th= model_class.human_attribute_name(:nome)
      %th= model_class.human_attribute_name(:ano_escolaridade)
      %th= model_class.human_attribute_name(:editora_id)
      %th= model_class.human_attribute_name("Autor")
      %th= model_class.human_attribute_name("PreÃ§o")
      %th
  %tbody
    - @livros.each do |livro|
      %tr
        %td= image_tag livro.photo1.url :thumb
        %td= link_to livro.disciplina.nome, livro_path(livro)
        %td= livro.nome
        %td= livro.ano_escolaridade
        %td= livro.editora.nome
        %td= livro.autore.nome
        %td= livro.preco
        %td
          = link_to t('.Contacto', :default => t("helpers.links.details")), edit_livro_path(livro), :class => 'btn btn-link'
