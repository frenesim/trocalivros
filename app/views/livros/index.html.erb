<h1>Listing livros</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Editora</th>
    <th>Ano escolaridade</th>
    <th>Autor</th>
    <th>Preco</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @livros.each do |livro| %>
  <tr>
    <td><%= livro.nome %></td>
    <td><%= livro.editora_id %></td>
    <td><%= livro.ano_escolaridade %></td>
    <td><%= livro.autor_id %></td>
    <td><%= livro.preco %></td>
    <td><%= link_to 'Show', livro %></td>
    <td><%= link_to 'Edit', edit_livro_path(livro) %></td>
    <td><%= link_to 'Destroy', livro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

