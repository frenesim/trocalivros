- model_class = Livro
.row-fluid
  .well.span6.offset1.left
    %h2=@livro.nome
    %h4=@livro.disciplina.nome
  .span2
    .well
      %strong Fotos:
      .row-fluid.offset1
        .span9
          #links
            -@livro.photos.each do |p|
              .thumbnail
                =link_to image_tag(p.image_url(:thumb), class:'img-rounded img-responsive'), p.image_url

  .span3.offset1.well.well-large
    %p
      %strong= model_class.human_attribute_name(:editora_id) + ':'
      %br
        .offset1= @livro.editora.nome
    %p
      %strong= model_class.human_attribute_name(:ano_escolaridade) + ':'
      %br
        .offset1= "#{@livro.ano_escolaridade}º ano"
  .span3.well.well-large
    %p
      %strong Autor:
      %br
        .offset1= @livro.autore.nome
    %p
      %strong Preço em Euros:
      %br
        .offset1="#{@livro.preco} €"
  .span10.well.well-large
    %p
      %strong Descrição:
      %br
        .offset1= @livro.description
.form-actions
  = link_to t("helpers.links.back"), redirect_back, :class => 'btn'
  -if @livro.user_id == current_user.object_id
    = link_to t("helpers.links.edit"), edit_livro_path(@livro), :class => 'btn'
  -else
    = link_to t("helpers.links.contact"), livro_user_path(@livro), :class => 'btn'
#blueimp-gallery.blueimp-gallery
  .slides
    %h3.title
    %a.prev‹
    %a.next›
    %a.close×
    %a.play-pause
    %ol.indicator

