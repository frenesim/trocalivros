= render :partial => "users/shared/registrations_header"
.container-fluid
  .row-fluid
    .span2
      = render_navigation :context => :user, :expand_all => true, :renderer => :bootstrap
    .span10
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
        = devise_error_messages!
        .control-group
          = f.label "Nova Palavra Chave"
          .controls
            = f.password_field :password, :autocomplete => "off"
        .control-group
          = f.label "Confirme Nova Palavra Chave"
          .controls
            = f.password_field :password_confirmation, :autocomplete => "off"
        .control-group
          = f.label :current_password
          .controls
            = f.password_field :current_password, :autocomplete => "off"
        .form-actions
          = f.submit "Update"
          = link_to "Back", :back
        %h5 Cancel my account
        %p
        Deseja encerrar a sua conta? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
